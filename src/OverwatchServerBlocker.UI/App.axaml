<Application x:Class="OverwatchServerBlocker.UI.App"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:shadThemes="clr-namespace:ShadUI;assembly=ShadUI"
             RequestedThemeVariant="Default">
    <Application.Styles>
        <shadThemes:ShadTheme />

        <StyleInclude Source="avares://IconPacks.Avalonia.FontAwesome/FontAwesome.axaml" />
    </Application.Styles>

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://OverwatchServerBlocker.UI/Controls/Controls.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

        <Thickness x:Key="PageMargin">24,24,24,12</Thickness>
    </Application.Resources>
</Application>