<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:OverwatchServerBlocker.UI.Controls">
    <Design.PreviewWith>
        <Border Padding="25">
            <controls:HeaderContainer Header="Header">
                <TextBlock Text="Content" />
            </controls:HeaderContainer>
        </Border>
    </Design.PreviewWith>

    <ControlTheme x:Key="{x:Type controls:HeaderContainer}"
                  TargetType="{x:Type controls:HeaderContainer}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Grid RowDefinitions="Auto, *">
                        <TextBlock Grid.Row="0"
                                   Margin="0,0,0,8"
                                   Classes="h4"
                                   Text="{TemplateBinding Header}" />
                        <ContentPresenter Grid.Row="1"
                                          HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          Content="{TemplateBinding Content}" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </ControlTheme>
</ResourceDictionary>
