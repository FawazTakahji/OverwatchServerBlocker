<UserControl x:Class="OverwatchServerBlocker.UI.Views.SettingsView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:OverwatchServerBlocker.UI.Controls"
             xmlns:converters="clr-namespace:OverwatchServerBlocker.UI.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:designTime="clr-namespace:OverwatchServerBlocker.UI.DesignTime"
             xmlns:echoes="clr-namespace:Echoes;assembly=Echoes.Avalonia"
             xmlns:iconPacks="https://github.com/MahApps/IconPacks.Avalonia"
             xmlns:localization="clr-namespace:OverwatchServerBlocker.Core.Localization;assembly=OverwatchServerBlocker.Core"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:OverwatchServerBlocker.Core.Models;assembly=OverwatchServerBlocker.Core"
             xmlns:vm="clr-namespace:OverwatchServerBlocker.Core.ViewModels;assembly=OverwatchServerBlocker.Core"
             d:DesignHeight="450"
             d:DesignWidth="800"
             x:DataType="vm:SettingsViewModel"
             mc:Ignorable="d">
    <Design.DataContext>
        <designTime:Locator Type="{x:Type vm:SettingsViewModel}" />
    </Design.DataContext>

    <Panel>
        <Panel.Styles>
            <Style Selector="iconPacks|PackIconFontAwesome.ButtonIcon">
                <Setter Property="Width" Value="16" />
                <Setter Property="Height" Value="16" />
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>
        </Panel.Styles>

        <Grid Margin="{StaticResource PageMargin}"
              RowDefinitions="Auto,*,Auto">
            <ScrollViewer Grid.Row="1">
                <StackPanel Spacing="16">
                    <controls:HeaderContainer Header="{echoes:Translate {x:Static localization:Settings.theme}}">
                        <StackPanel Orientation="Horizontal">

                            <Button BorderThickness="1,1,0,1"
                                    Classes="NoPressedAnimation"
                                    Classes.Outline="{Binding Theme, Mode=OneWay, Converter={x:Static converters:BooleanConverters.ObjectNotEquals}, ConverterParameter={x:Static models:Theme.System}}"
                                    Classes.Primary="{Binding Theme, Mode=OneWay, Converter={x:Static converters:BooleanConverters.ObjectEquals}, ConverterParameter={x:Static models:Theme.System}}"
                                    Command="{Binding SwitchThemeCommand}"
                                    CommandParameter="{x:Static models:Theme.System}"
                                    CornerRadius="8,0,0,8">
                                <StackPanel Orientation="Horizontal"
                                            Spacing="8">
                                    <iconPacks:PackIconFontAwesome Classes="ButtonIcon"
                                                                   Kind="ComputerSolid" />
                                    <TextBlock Text="{echoes:Translate {x:Static localization:Settings.system}}" />
                                </StackPanel>
                            </Button>

                            <Button BorderThickness="0,1,0,1"
                                    Classes="NoPressedAnimation"
                                    Classes.Outline="{Binding Theme, Mode=OneWay, Converter={x:Static converters:BooleanConverters.ObjectNotEquals}, ConverterParameter={x:Static models:Theme.Light}}"
                                    Classes.Primary="{Binding Theme, Mode=OneWay, Converter={x:Static converters:BooleanConverters.ObjectEquals}, ConverterParameter={x:Static models:Theme.Light}}"
                                    Command="{Binding SwitchThemeCommand}"
                                    CommandParameter="{x:Static models:Theme.Light}"
                                    CornerRadius="0">
                                <StackPanel Orientation="Horizontal"
                                            Spacing="8">
                                    <iconPacks:PackIconFontAwesome Classes="ButtonIcon"
                                                                   Kind="SunSolid" />
                                    <TextBlock Text="{echoes:Translate {x:Static localization:Settings.light}}" />
                                </StackPanel>
                            </Button>

                            <Button BorderThickness="0,1,1,1"
                                    Classes="NoPressedAnimation"
                                    Classes.Outline="{Binding Theme, Mode=OneWay, Converter={x:Static converters:BooleanConverters.ObjectNotEquals}, ConverterParameter={x:Static models:Theme.Dark}}"
                                    Classes.Primary="{Binding Theme, Mode=OneWay, Converter={x:Static converters:BooleanConverters.ObjectEquals}, ConverterParameter={x:Static models:Theme.Dark}}"
                                    Command="{Binding SwitchThemeCommand}"
                                    CommandParameter="{x:Static models:Theme.Dark}"
                                    CornerRadius="0,8,8,0">
                                <StackPanel Orientation="Horizontal"
                                            Spacing="8">
                                    <iconPacks:PackIconFontAwesome Classes="ButtonIcon"
                                                                   Kind="MoonSolid" />
                                    <TextBlock Text="{echoes:Translate {x:Static localization:Settings.dark}}" />
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </controls:HeaderContainer>

                    <controls:HeaderContainer Header="{echoes:Translate {x:Static localization:Settings.language}}">
                        <ComboBox Width="100"
                                  DisplayMemberBinding="{Binding DisplayName}"
                                  ItemsSource="{Binding SupportedLanguages}"
                                  SelectedValue="{Binding Language}"
                                  SelectedValueBinding="{Binding Culture}" />
                    </controls:HeaderContainer>

                    <controls:HeaderContainer HorizontalContentAlignment="Stretch"
                                              Header="{echoes:Translate {x:Static localization:Settings.game_executable_path}}">
                        <TextBox x:Name="GamePathTextBox"
                                 Margin="0,0,16,0"
                                 Text="{Binding GamePath}"
                                 TextAlignment="DetectFromContent">
                            <TextBox.InnerRightContent>
                                <Button Command="{Binding SelectGamePathCommand}"
                                        ToolTip.Tip="{echoes:Translate {x:Static localization:Settings.browse}}">
                                    <iconPacks:PackIconFontAwesome Kind="FolderOpenSolid" />
                                </Button>
                            </TextBox.InnerRightContent>
                        </TextBox>
                    </controls:HeaderContainer>

                    <Button HorizontalAlignment="Left"
                            Classes.Ghost="{Binding !CheckUpdatesOnStartup}"
                            Classes.Primary="{Binding CheckUpdatesOnStartup}"
                            Command="{Binding ToggleCheckUpdatesOnStartupCommand}">
                        <StackPanel Orientation="Horizontal"
                                    Spacing="8">
                            <iconPacks:PackIconFontAwesome Width="12"
                                                           Height="12"
                                                           VerticalAlignment="Center"
                                                           Kind="{Binding CheckUpdatesOnStartup, Converter={x:Static converters:BooleanConverters.ToggleIcon}}" />
                            <TextBlock Text="{echoes:Translate {x:Static localization:Settings.check_startup}}" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </ScrollViewer>

            <Border Grid.Row="2"
                    Padding="0,16,0,0"
                    VerticalAlignment="Bottom">
                <Grid ColumnDefinitions="Auto, *, Auto">
                    <Button Grid.Column="0"
                            Classes="Destructive"
                            Command="{Binding ResetCommand}">
                        <StackPanel Orientation="Horizontal"
                                    Spacing="8">
                            <iconPacks:PackIconFontAwesome Classes="ButtonIcon"
                                                           Flip="Vertical"
                                                           Kind="ArrowsSpinSolid" />
                            <TextBlock Text="{echoes:Translate {x:Static localization:Settings.reset}}" />
                        </StackPanel>
                    </Button>
                    <Button Grid.Column="1"
                            Margin="8,0"
                            HorizontalAlignment="Right"
                            Classes="Secondary"
                            Command="{Binding RestoreCommand}">
                        <StackPanel Orientation="Horizontal"
                                    Spacing="8">
                            <iconPacks:PackIconFontAwesome Classes="ButtonIcon"
                                                           Kind="ArrowRotateLeftSolid" />
                            <TextBlock Text="{echoes:Translate {x:Static localization:Settings.restore}}" />
                        </StackPanel>
                    </Button>
                    <Button Grid.Column="2"
                            Classes="Primary"
                            Command="{Binding ApplyCommand}">
                        <StackPanel Orientation="Horizontal"
                                    Spacing="8">
                            <iconPacks:PackIconFontAwesome Classes="ButtonIcon"
                                                           Kind="CircleCheckSolid" />
                            <TextBlock Text="{echoes:Translate {x:Static localization:Misc.apply}}" />
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </Panel>
</UserControl>
