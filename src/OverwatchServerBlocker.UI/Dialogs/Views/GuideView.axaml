<UserControl x:Class="OverwatchServerBlocker.UI.Dialogs.Views.GuideView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dvm="clr-namespace:OverwatchServerBlocker.UI.Dialogs.ViewModels"
             xmlns:echoes="clr-namespace:Echoes;assembly=Echoes.Avalonia"
             xmlns:iconPacks="https://github.com/MahApps/IconPacks.Avalonia"
             xmlns:localization="clr-namespace:OverwatchServerBlocker.Core.Localization;assembly=OverwatchServerBlocker.Core"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             d:DesignHeight="450"
             d:DesignWidth="800"
             x:DataType="dvm:GuideViewModel"
             mc:Ignorable="d">
    <StackPanel Margin="24"
                Spacing="16">
        <TextBlock FontSize="18"
                   FontWeight="DemiBold"
                   Text="{echoes:Translate {x:Static localization:Servers.manual_setup}}" />

        <TextBlock FontSize="14"
                   FontWeight="Medium"
                   Foreground="{DynamicResource MutedColor}"
                   LineHeight="20"
                   TextWrapping="Wrap">
            <Run Text="{echoes:Translate {x:Static localization:Servers.manual_setup_description_1}}" />
            <Run Text="{x:Static system:Environment.NewLine}" /><Run Text="{echoes:Translate {x:Static localization:Servers.manual_setup_description_2}}" />
        </TextBlock>

        <StackPanel Name="ButtonContainer"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal"
                    Spacing="8">
            <StackPanel.Styles>
                <Style Selector="iconPacks|PackIconFontAwesome.ButtonIcon">
                    <Setter Property="Width" Value="16" />
                    <Setter Property="Height" Value="16" />
                    <Setter Property="VerticalAlignment" Value="Center" />
                </Style>
            </StackPanel.Styles>
            <Button Classes="Primary"
                    Command="{Binding CopyPortCommand}">
                <StackPanel Orientation="Horizontal"
                            Spacing="8">
                    <iconPacks:PackIconFontAwesome Classes="ButtonIcon"
                                                   Kind="CopySolid" />
                    <TextBlock Text="{echoes:Translate {x:Static localization:Servers.copy_ports}}" />
                </StackPanel>
            </Button>
            <Button Classes="Primary"
                    Command="{Binding CopyIpRangeCommand}">
                <StackPanel Orientation="Horizontal"
                            Spacing="8">
                    <iconPacks:PackIconFontAwesome Classes="ButtonIcon"
                                                   Kind="CopySolid" />
                    <TextBlock Text="{echoes:Translate {x:Static localization:Servers.copy_ip_ranges}}" />
                </StackPanel>
            </Button>
        </StackPanel>
    </StackPanel>
</UserControl>
